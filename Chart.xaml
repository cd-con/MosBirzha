<UserControl x:Class="MosBirzha_23var.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MosBirzha_23var"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollBar x:Name="TimeBar" GotFocus="TimeBar_GotFocus" LostFocus="TimeBar_LostFocus" ValueChanged="ScrollBar_ValueChanged" Maximum="1000" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"></ScrollBar>
        <ScrollBar x:Name="Zoom" Minimum="1" Maximum="4" ValueChanged="Zoom_ValueChanged" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,0,17"/>
        <Canvas x:Name="CandleCanvas" Margin="0,0,17,17"></Canvas>
    </Grid>
</UserControl>
